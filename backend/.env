# QHop Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/qhop_dev?schema=public"

# JWT Configuration
JWT_SECRET=qhop-super-secret-jwt-key-for-development-only-change-in-production
JWT_EXPIRES_IN=24h

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SMS Service Configuration (Twilio) - Development Mode
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@qhop.com
FROM_NAME=QHop

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=qhop-session-secret-for-development

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365

# Notification Configuration
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Business Configuration
DEFAULT_QUEUE_SIZE=50
DEFAULT_SERVICE_TIME=15
MAX_QUEUE_SIZE=1000

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Development Configuration
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
